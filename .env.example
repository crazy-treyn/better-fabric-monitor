# Better Fabric Monitor - Environment Configuration
# Copy this file to .env and fill in your values for development

# Azure Authentication
# The app uses Azure CLI public client ID by default for user authentication
# Leave AZURE_CLIENT_ID empty to use the default (04b07795-8ddb-461a-bbee-02f9e1bf7b46)
# No app registration needed - authenticates as the user
AZURE_CLIENT_ID=
AZURE_TENANT_ID=

# Fabric Workspaces (for testing)
# Comma-separated list of workspace IDs to monitor
FABRIC_WORKSPACE_IDS=workspace-id-1,workspace-id-2

# Database
# Path to DuckDB file (relative to app data directory)
DATABASE_PATH=data/fabric-monitor.db
# Encryption key for DuckDB (leave empty for no encryption in dev)
DATABASE_ENCRYPTION_KEY=

# Application
# Log level: debug, info, warn, error
LOG_LEVEL=debug
# Development mode
DEBUG=true

# UI Configuration
# Primary theme color (hex code)
THEME_PRIMARY_COLOR=#00BCF2
# Theme: light, dark, auto
THEME_MODE=dark

# Notifications
# Enable desktop notifications
NOTIFICATIONS_ENABLED=true
# Play sound with notifications
NOTIFICATIONS_SOUND=true

# Polling
# Polling interval in minutes
POLLING_INTERVAL_MINUTES=2
# Data retention in days
DATA_RETENTION_DAYS=90